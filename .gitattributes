# Set default behavior to automatically normalize line endings
* text=auto

# Force Unix-style line endings for specific files
*.py text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.txt text eol=lf
*.sh text eol=lf
Makefile text eol=lf

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary

# Python-specific
*.pyc binary
*.pyo binary
*.egg binary
*.whl binary

# Export ignore (files not included in git archive)
.gitignore export-ignore
.gitattributes export-ignore
.github export-ignore
tests export-ignore
.pre-commit-config.yaml export-ignore

